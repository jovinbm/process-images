{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "checkJs": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es2017",
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsbuild-info",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/declarations"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
